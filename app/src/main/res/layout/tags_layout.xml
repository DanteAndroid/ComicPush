                    android:id="@+id/comicstrip"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/comicstrip"
                />
            </com.google.android.flexbox.FlexboxLayout>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/lengthsConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:paddingTop="4dp">
            <TextView
                android:id="@+id/length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="篇幅："/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/lengths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:alignContent="flex_start"
                app:alignItems="flex_start"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:layout_constraintTop_toBottomOf="@id/length">

                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/allLength"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/all"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/shortLength"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/shortLength"
                />
