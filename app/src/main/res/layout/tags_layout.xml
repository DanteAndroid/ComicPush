        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/stateConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:paddingTop="4dp">
            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="狀態："/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/states"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:alignContent="flex_start"
                app:alignItems="flex_start"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:layout_constraintTop_toBottomOf="@id/state">

                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/allState"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/all"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/finished"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/finished"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/unfinished"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/unfinished"
                />
            </com.google.android.flexbox.FlexboxLayout>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/ordersConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:paddingTop="4dp">
            <TextView
                android:id="@+id/order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排序："/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:alignContent="flex_start"
                app:alignItems="flex_start"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:layout_constraintTop_toBottomOf="@id/order">

                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/sortpoint"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/sortpoint"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/count_push"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/cout_push"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/score"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/score"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/lastupdate"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/lastupdate"
                />
