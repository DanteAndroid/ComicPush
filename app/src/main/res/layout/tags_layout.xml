                    app:mcv_chipText="@string/war"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/horror"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/horror"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/survive"
