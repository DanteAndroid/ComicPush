                    app:mcv_chipText="@string/magic"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/wizardry"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/wizardry"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/ghost"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/ghost"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/detective"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/detective"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/suspense"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/suspense"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/cure"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/cure"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/food"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/food"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/life"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/life"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/science"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/science"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/history"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/history"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/workplace"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/workplace"
                />
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/war"
