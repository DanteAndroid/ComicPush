                    android:id="@+id/allCat"
                    style="@style/chipStyle"
                    app:mcv_chipText="全部"/>
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/fun"
                    style="@style/chipStyle"
                    app:mcv_chipText="@string/fun"/>
                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/love"
                    style="@style/chipStyle"
